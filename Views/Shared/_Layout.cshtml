<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.6.4.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.23.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.signalR-0.5.3.min.js")" type="text/javascript"></script>
    <script src="/signalr/hubs" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/chess-board.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/chess-element.js")" type="text/javascript"></script>

    <script language="javascript" type="text/javascript">
        $(function () {
            createChessboard();
            myChess.myType = prompt("Select kingdom (black/white)");
            $('.message').attr('isMyMove', myChess.myType == 'white' ? 1 : 0);
            if (myChess.isMyMove())
                myChess.showMessage(chessMsgs.myMove);

            myChess.initializeCastlingParameters();
            $('.chess-board tr td a').click(function (e) {
                new chessElement($(this)).click();
                e.stopImmediatePropagation();
            });
        });
    </script>
</head>
<body>
    <div class="page">
        <div id="header">
            <div id="title">
                <h1>My First Chess Application</h1>
            </div>
            <div id="logindisplay">
                &nbsp;
            </div>
            <div id="menucontainer">
                
            </div>
        </div>
        <div id="main">
            @RenderBody()
        </div>
        <div id="footer">
        </div>
    </div>
</body>
</html>
